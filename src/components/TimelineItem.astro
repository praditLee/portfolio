---
const { year, title, company, description } = Astro.props;
---

<div class="timeline-item">
  <div class="timeline-left">
    <span class="timeline-year">{year}</span>
  </div>
  <div class="timeline-middle">
    <div class="timeline-dot"></div>
  </div>
  <div class="timeline-right">
    <div class="timeline-content">
      <h3 class="timeline-title">{title}</h3>
      <h4 class="timeline-company">{company}</h4>
      <p class="timeline-description" set:html={description} />
    </div>
  </div>
</div>

<style>
  .timeline-item {
    display: grid;
    grid-template-columns: 30% 1fr;
    gap: var(--spacing-lg);
    position: relative;
  }

  .timeline-left {
    text-align: right;
    padding-right: var(--spacing-lg);
    padding-top: 5px; /* จัดตำแหน่งปีให้อยู่สูงขึ้นเล็กน้อย */
  }
  .timeline-year {
    font-weight: 700;
    font-family: var(--font-heading);
    color: var(--color-text-primary);
    font-size: 1.8rem; /* ปรับขนาดให้เหมาะสม */
  }

  .timeline-middle {
    position: absolute;
    top: 10px; /* จัดตำแหน่ง dot ให้อยู่กลางๆ ของบรรทัดปี */
    left: 30%;
    transform: translateX(-50%);
  }
  .timeline-dot {
    width: 15px;
    height: 15px;
    background-color: var(--color-background);
    border: 3px solid var(--color-primary);
    border-radius: 50%;
    margin-top: 10px;
  }

  .timeline-right {
    padding-bottom: var(--spacing-xl);
  }
  .timeline-content {
    padding: var(--spacing-md);
    border-radius: var(--border-radius);
  }
  .timeline-title {
    font-size: 1.5rem;
    margin: 0 0 var(--spacing-xs);
  }
  .timeline-company {
    font-size: 1rem;
    font-style: italic;
    color: var(--color-text-secondary);
    margin: 0 0 var(--spacing-sm);
  }
  .timeline-description {
    margin: 0;
  }

  /* Responsive สำหรับมือถือ (ย้ายมาไว้ที่นี่) */
  @media (max-width: 768px) {
    .timeline-item {
      grid-template-columns: 1fr;
      padding-left: calc(var(--spacing-md) + var(--spacing-lg));
    }
    .timeline-left {
      text-align: left;
      padding-left: 0;
      padding-right: 0;
      padding-top: 0;
      grid-row: 1;
      margin-bottom: var(--spacing-sm);
    }
    .timeline-middle {
      left: var(--spacing-md);
    }
    .timeline-right {
      padding-left: 0;
      grid-row: 2;
      padding-bottom: var(--spacing-lg);
    }
    .timeline-content {
      padding: 0;
    }
  }
</style>
